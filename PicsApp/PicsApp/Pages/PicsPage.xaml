<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PicsApp.Pages.PicsPage"
             NavigationPage.HasNavigationBar="False">
    <Grid RowDefinitions="90*, 10*">
        <ScrollView x:Name="scrollView" Padding="10" Grid.Row="0"/>

        <Grid ColumnDefinitions="*, *" Grid.Row="1">
            <Button Grid.Column="0" Text="Открыть" x:Name="show" Clicked="show_Clicked"/>
            <Button Grid.Column="1" Text="Удалить" x:Name="delete" Clicked="delete_Clicked"/>
        </Grid>
    </Grid>
</ContentPage>